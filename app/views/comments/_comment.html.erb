<div class="comment-card d-flex justify-content-between align-items-center w-100">
  <div style="width:70%;">
    <div>
      <p class="name-username user-details">
        <b><%= comment.user.first_name %>
        <%= comment.user.last_name %></b>
        @<%= comment.user.username %>
      </p>
    </div>
    <p><%= comment.content %></p>
  </div>
  <p class="name-username secondary-text" style="font-size: 12px;"><i><%= comment.created_at.strftime("%I:%M%p - %m/%d/%Y") %></i></p>
</div>
